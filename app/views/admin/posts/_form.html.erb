	
	<div class="col-sm-12">
		<%= link_to "Main Page", admin_posts_path %>
	</div>

	<%= bootstrap_form_for [:admin, @post] do |f| %>

		<div class="col-sm-2">
			<%= f.text_field :title ,placeholder: "Leave a comment..."%>
		</div>

		<div class="col-sm-10">
	  <%= f.text_area :content ,placeholder: "Leave a comment..."%>
	  </div>
		
		<% if @post.picture.exists? %>
    	<%= check_box_tag "destroy_logo", "1" %> 刪除檔案
    <% end %>

	  <div class="col-sm-2">
	  	<%= f.file_field :picture %>
	  </div>
		
		<div class="col-sm-2">
	  	<%= f.submit "Create" %>
		</div>

	<% end %>

	