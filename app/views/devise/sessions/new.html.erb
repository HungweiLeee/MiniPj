<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

    <h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    
    <%= f.email_field :email, autofocus: true, :class => "form-group", :placeholder => "Enter Email here"%>
  </div>

  <div class="form-group">
    
    <%= f.password_field :password, autocomplete: "off", :class => "form-group", :placeholder => "Enter password here" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %> remember_me
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", :class => "btn btn-primary" %>
    <%= link_to "Forget password", new_user_password_path, :class => "btn btn-primary "%>
  </div>
<% end %>
    
  </div> 
</div>



